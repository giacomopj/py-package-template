{
    "configurations": [
        {
            "name": "Terminal",
            "type": "python",
            "request": "launch",
            "program": "src",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${cwd}"},
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Build Runner",
            "type": "shell",
            "request": "launch",
            "preLaunchTask": "build-runner"
        },
        {
            "name": "Launch Runner",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "run-runner",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/opt/app"
                    }
                ],
            }
        },
        {
            "name": "Build Debugger",
            "type": "shell",
            "request": "launch",
            "preLaunchTask": "build-debugger"
        },
        {
            "name": "Launch Debugger",
            "type": "docker",
            "request": "attach",
            "preLaunchTask": "run-debugger",
            "python": {
                "port": 5678,
                "host": "localhost",
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/opt/app"
                    }
                ],
            }
        },
        {
            "name": "Build Tester",
            "type": "shell",
            "request": "launch",
            "preLaunchTask": "build-tester"
        },
        {
            "name": "Launch Tester",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "run-tester",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/opt/app"
                    }
                ],
            }
        }
    ]
}
